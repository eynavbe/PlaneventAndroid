<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupHallActivity">


    <!--text view for heading-->
    <TextView
        android:id="@+id/idManagRgtrHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="כניסה"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="25dp" />


    <!--edit text for user name-->
    <EditText
        android:id="@+id/idManagtMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idManagRgtrHeader"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Email "
        android:inputType="textEmailAddress" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/passwordManagTil"
        android:layout_below="@id/idManagtMail"
        app:passwordToggleEnabled="true">

        <!--edit text for user password-->
        <EditText
            android:id="@+id/idManagPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <!--button to register our new user-->
    <Button
        android:id="@+id/idBtnManagSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordManagTil"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="כניסה"
        android:backgroundTint="@color/purple"
        android:textAllCaps="false" />


    <TextView
        android:id="@+id/idTxtSignupManag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idBtnManagSignup"
        android:layout_marginTop="9dp"
        android:text="Dont have an account?"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/idClicktxtRegisterManag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTxtSignupManag"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-254dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:text="Click here"
        android:textAlignment="center"
        android:textSize="15dp" />

</RelativeLayout>
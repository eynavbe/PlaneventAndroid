<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:text="עריכה ___"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvHallEditIncludedInPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="__ שכלולים במחיר."/>
        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imHallEditPlusChooseCountAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                app:srcCompat="@drawable/ic_plus_circle_24" />
            <TextView
                android:id="@+id/tvHallEditChooseCountAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="0"/>
            <ImageView
                android:id="@+id/imHallEditMinusChooseCountAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                app:srcCompat="@drawable/ic_minus_circle_24" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvHallEditIncluded"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="מתוך"/>
        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imHallEditPlusChooseFromAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                app:srcCompat="@drawable/ic_plus_circle_24" />
            <TextView
                android:id="@+id/tvHallEditChooseFromAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:inputType="number"
                android:text="0"/>
            <ImageView
                android:id="@+id/imHallEditMinusChooseFromAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                app:srcCompat="@drawable/ic_minus_circle_24" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvHallEditPleaseChoose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="נא לבחור"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvHallEditInAdditionThere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="בנוסף קיים אפשרות לבחור ___ בתוספת תשלום"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/btnAddToListHallEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_primary"
            android:textColor="@color/white"
            android:layout_margin="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Add"
            android:drawableRight="@drawable/ic_baseline_add_white"
            />
        <Button
            android:id="@+id/btnSaveListHallEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/round_primary"
            android:textColor="@color/white"
            android:text="Save"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llListHallEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

    </LinearLayout>
    </ScrollView>


</LinearLayout>